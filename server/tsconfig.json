{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "baseUrl": "./src/",
        "paths": {
            "@db/*": [
                "db/*"
            ],
            "@db": [
                "db/db"
            ],
            "@router/*": [
                "router/*"
            ],
            "@logger": [
                "logger/logger"
            ]
        }
    },
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}